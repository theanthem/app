<% @page_title = "Login" %>
<% @page_class = 'login'%>

<h1><%= @page_title %></h1>

<%= form_tag :action => "send_login" do %>
  <%= text_field_tag('username', params[:username], :placeholder => "Username") %>
  <%= password_field_tag('password') %>
<%= submit_tag("Log in", :class => "submit") %>
<% end -%>
<div class="clear">&nbsp;</div>