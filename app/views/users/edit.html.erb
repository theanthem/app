<% @page_title = 'Edit : ' + @user.name  %>
<% @page_class = 'manage form user'%>


<div class="userlist">
	<div class="userHead">
			<%= image_tag @user.avatar.url(:medium) %>
			<div class="userInfo">
				<h2><%= @user.name %></h2>
				<span class="userEmail"><%= mail_to @user.email, @user.email %></span>
				<span class="lastActive">Last Active 15 hours ago &bull; Access Level <%= @user.access_level %></span>
			</div>
		<% if @user.id == session[:user_id] %>
			<% @userName = "Your" %>
		<% else %>
			<% @userName = @user.first_name.possessive %>
		<% end %>
		<a class="update">Update <%= @userName %>  Info</a>
	</div>
	<div class="bio">
		<h3><%= @user.name %></h3>
		<span class="title"><%= @user.title %></span>
		<%= raw simple_format(@user.bio) %>
		<span class="userTwitter">
			@<%= @user.twitter  %> : 
			<%= Twitter.user_timeline(@user.twitter).first.text %>
	</div>
	<div class="userForm">
		<%= form_for :user, :url => {:action => 'update', :id => @user}, :html => { :multipart => true } do |f| %>
		  <%= render :partial => 'form', :locals => {:f => f}  %>
		<% end %>
	</div>
	<div class="userActivity">
		<h3><%= @user.first_name.possessive %> latest activity</h3>
	</div>
	<%= link_to('Cancel', :action => 'index') %>
</div>
<script>
	$('a.update').click(function() {
		$('.userForm').toggleClass("showForm");
	})
</script>


