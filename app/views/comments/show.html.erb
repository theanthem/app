<% @page_title = @comment.post.title + 'Comments' +   %>
<% @page_class = 'list comments'%>

<div id="pageTitle">
	<div class="controller_navigation">	</div>
	<h1><%= @page_title %></h1>
</div>
<div class="breaker">&nbsp;</div>

<table cellspacing="0" cellpadding="0">
	<tr>
		<th>Author:</th><td><%= h(@comment.author) %></td>
	</tr>
	<tr>
		<th>Email:</th><td><%= h(@comment.author_email) %></td>
	</tr>
	<tr>
		<th>Status:</th><td><%= h(@comment.status) %></td>
	</tr>
	<tr>
		<th>Created:</th><td><%= @comment.created_at.strftime('%m/%d/%y at %I:%m %p') %></td>
	</tr>
	<tr>
		<th>Comment:</th><td><%= h(@comment.content) %></td>
	</tr>
</table>